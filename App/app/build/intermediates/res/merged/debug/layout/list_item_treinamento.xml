<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_listview_selector" >

    <ImageView
        android:id="@+id/imgFotoTreinamento"
        android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
        android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/treinamento"
        android:layout_margin="@dimen/margem_media"
        android:contentDescription="@string/label_treinamento_aula" />

    <TextView
        android:id="@+id/txtNomeTreinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_nome_do_treinamento"
        android:layout_toRightOf="@+id/imgFotoTreinamento"
        android:text="NomeDoTreinamento" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lbl_nome_do_treinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomeTreinamento"
        android:layout_alignTop="@+id/imgFotoTreinamento"
        android:text="@string/label_nome_do_treinamento"
        android:textColor="@color/cinzaTitulos"
        android:textSize="@dimen/titulos_extra_pequenos" />

    <TextView
        android:id="@+id/txtNumeroDeExercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgFotoTreinamento"
        android:layout_alignParentRight="true"
        android:text="XX Exercicios"
        android:textColor="@color/VerdePetroleo"
        android:textSize="@dimen/titulos_extra_pequenos" />

</RelativeLayout><!-- From: file:/home/vinicius/Dropbox/Projeto%20Workup/Backups%20Projeto/actualProject/app/src/main/res/layout/list_item_treinamento.xml -->