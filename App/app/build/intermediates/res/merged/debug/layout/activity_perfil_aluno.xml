<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/shape_bg">
    
    

    <RelativeLayout
   
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margem_media"
         >

        <ImageView
            android:id="@+id/imgFotoAluno"
            android:layout_width="@dimen/imagem_tamanho_pequeno"
            android:layout_height="@dimen/imagem_tamanho_pequeno"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margem_media"
            android:contentDescription="@string/label_selecionar_foto"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/dadosPerfilAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgFotoAluno"
            android:layout_margin="@dimen/margem_media"
            android:background="@drawable/shape_bg_branco"
            android:orientation="vertical"
            android:padding="@dimen/margem_media" >

            <TextView
                android:id="@+id/lblNomeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_pequena"
                android:text="@string/label_nomeCompleto"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/edtNomeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblDataDeNascimentoAluno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margem_pequena"
                    android:text="@string/label_dataDeNascimento"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="@dimen/margem_media"
                    android:layout_marginBottom="@dimen/margem_media"
                    android:gravity="center">

                    <NumberPicker
                        android:id="@+id/nmbDataNascimentoDiaAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <NumberPicker
                        android:id="@+id/nmbDataNascimentoMesAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <NumberPicker
                        android:id="@+id/nmbDataNascimentoAnoAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/lblTelefoneAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_pequena"
                android:text="@string/label_telefone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/edtTelefoneAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/lblEmailAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_pequena"
                android:text="@string/label_email"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/edtEmailAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAtualizarPerfilAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dadosPerfilAluno"
            android:layout_margin="@dimen/margem_media"
            android:background="@drawable/shape_botao_azul"
            android:text="@string/botao_nome_atualizar"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    

</ScrollView><!-- From: file:/home/vinicius/Dropbox/Projeto%20Workup/Backups%20Projeto/actualProject/app/src/main/res/layout/activity_perfil_aluno.xml -->