<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/shape_bg" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margem_media" >
        
          <ImageView
	        android:id="@+id/imgFotoAdicionarAluno"
	        android:layout_width="@dimen/imagem_tamanho_pequeno"
	        android:layout_height="@dimen/imagem_tamanho_pequeno"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_margin="@dimen/margem_pequena"
	        android:contentDescription="@string/label_selecionar_foto"
	        android:src="@drawable/profile" />
          
	    <LinearLayout
	        android:id="@+id/perfilAdicionarAluno"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/imgFotoAdicionarAluno"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/imgFotoAdicionarAluno"
	        android:layout_margin="@dimen/margem_media"
	        android:background="@drawable/shape_bg_branco"
	        android:orientation="vertical"
	        android:padding="@dimen/margem_media" >

	        <TextView
	            android:id="@+id/lblUsuarioAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/label_usuario_aluno"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/cinzaTitulos"
	            android:layout_margin="@dimen/margem_pequena" />

	        <TextView
	            android:id="@+id/infoUsuarioAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" - "
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <TextView
	            android:id="@+id/lblNomeAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/label_nome_aluno"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/cinzaTitulos" 
	            android:layout_margin="@dimen/margem_pequena"/>

	        <TextView
	            android:id="@+id/infoNomeAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" - "
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <TextView
	            android:id="@+id/lblDataDeNascimentoAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/label_data_de_nascimento_aluno"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/cinzaTitulos" 
	            android:layout_margin="@dimen/margem_pequena"/>

	        <TextView
	            android:id="@+id/infoDataDeNascimentoAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" - "
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <TextView
	            android:id="@+id/lblEmailAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/label_email"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/cinzaTitulos"
	            android:layout_margin="@dimen/margem_pequena" />

	        <TextView
	            android:id="@+id/infoEmailAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" - "
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <TextView
	            android:id="@+id/lblSexoAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/label_sexo_aluno"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/cinzaTitulos"
	            android:layout_margin="@dimen/margem_pequena" />

	        <TextView
	            android:id="@+id/infoSexoAluno"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" - "
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	      </LinearLayout>

	  

	    <Button
	        android:id="@+id/btnAdicionarRemover"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/perfilAdicionarAluno"
	        android:layout_below="@+id/perfilAdicionarAluno"
	        android:layout_margin="@dimen/margem_media"
	        android:background="@drawable/shape_botao_azul"
	        android:onClick="adicionarRemoverAluno"
	        android:text="@string/botao_nome_adicionar"
	        android:textColor="@color/branco" />
	   
</RelativeLayout>

</ScrollView><!-- From: file:/home/vinicius/Dropbox/Projeto%20Workup/Backups%20Projeto/actualProject/app/src/main/res/layout/activity_adicionar_aluno.xml -->