<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_listview_branco" >

    <ImageView
        android:id="@+id/imgIconeAvaliacao"
        android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
        android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
        android:contentDescription="desc"
        android:src="@drawable/prancheta"
	    android:layout_margin="@dimen/margem_pequena" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDataAvaliacao"
        android:layout_alignTop="@+id/imgIconeAvaliacao"
        android:text="@string/label_realizada_em" 
        android:textColor="@color/cinzaTitulos"
        android:textSize="@dimen/titulos_extra_pequenos"/>

    <TextView
        android:id="@+id/txtDataAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/imgIconeAvaliacao"
        android:text="22/10/1990"
        android:textStyle="bold"
        android:textSize="@dimen/titulos_pequenos" />

    <TextView
        android:id="@+id/txtHoraAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataAvaliacao"
        android:layout_toRightOf="@+id/imgIconeAvaliacao"
        android:text="19:00:00"
        android:textColor="@color/cinzaTitulos"
        android:textSize="@dimen/titulos_extra_pequenos" />

</RelativeLayout><!-- From: file:/home/vinicius/Dropbox/Projeto%20Workup/Backups%20Projeto/actualProject/app/src/main/res/layout/list_item_avaliacao.xml -->