<RelativeLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/shape_bg"
        android:orientation="vertical" >	
         <ImageView
            android:id="@+id/imgConfirmacaoAula"
            android:layout_width="@dimen/imagem_tamanho_pequeno"
            android:layout_height="@dimen/imagem_tamanho_pequeno"
            android:layout_margin="@dimen/margem_media"
            android:layout_alignLeft="@+id/informacoesConfirmarCancelarAula"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/informacoesConfirmarCancelarAula"
            android:src="@drawable/horarios" />

        <LinearLayout
            android:id="@+id/informacoesConfirmarCancelarAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imgConfirmacaoAula"
            android:layout_margin="@dimen/margem_media"
            android:background="@drawable/shape_bg_branco"
            android:orientation="vertical"
            android:padding="@dimen/margem_media" >

            <ListView
                android:id="@+id/lstConfirmacaoAula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

            </ListView>
        </LinearLayout>

		<LinearLayout
		    android:id="@+id/lytDescricaoAula"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@id/informacoesConfirmarCancelarAula"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_margin="@dimen/margem_pequena"
		    android:gravity="center" >

		    <Button
		        android:id="@+id/btnConfirmarAula"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/shape_botao_azul"
		        android:onClick="confirmarAula"
		        android:layout_margin="@dimen/margem_pequena"
		        android:padding="@dimen/margem_media"
		        android:text="@string/botao_confirmar"
		        android:textColor="@color/branco" />

		    <Button
		        android:id="@+id/btnCancelarAula"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/shape_botao_vermelho"
		        android:onClick="cancelarAula"
		        android:layout_margin="@dimen/margem_pequena"
				android:padding="@dimen/margem_media"
		        android:text="@string/botao_cancelar"
		        android:textColor="@color/branco" />
		</LinearLayout>
       
    </RelativeLayout>
