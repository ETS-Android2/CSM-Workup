<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_bg" >
    
	
		
		
        <RelativeLayout
        android:id="@+id/marcarAulasItens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
       >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_margin="@dimen/margem_media"
		    android:background="@drawable/shape_bg_branco"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:padding="@dimen/margem_media" >

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
				android:gravity="center"
				android:layout_margin="@dimen/margem_pequena">

				<TextView
				    android:id="@+id/TextView01"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/label_SelecioneData" />

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:gravity="center" >

					<NumberPicker
                        android:id="@+id/nmbSelecionarDataAulaMes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

					<NumberPicker
				        android:id="@+id/nmbSelecionarDataAulaDia"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />

					<NumberPicker
				        android:id="@+id/nmbSelecionarDataAulaAno"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:gravity="center"
			    android:layout_margin="@dimen/margem_pequena" >

				<TextView
				    android:id="@+id/textView1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/label_selecioneHorario" />

				<LinearLayout
				    android:id="@+id/selecionarData"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:gravity="center" >

				    <NumberPicker
				        android:id="@+id/nmbSelecionarHorarioAulaHora"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />

				    <NumberPicker
				        android:id="@+id/nmbSelecionarHorarioAulaMinuto"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="@dimen/margem_pequena"
			    android:gravity="center"
			    android:orientation="vertical" >

			    <TextView
			        android:id="@+id/TextView02"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/label_duracao_aula" />

			    <LinearLayout
			        android:id="@+id/LinearLayout01"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center" >

			        <NumberPicker
			            android:id="@+id/nmbSelecionarDuracaoAula"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" />
			    </LinearLayout>
			</LinearLayout>

			<Button
			    android:id="@+id/btnVerificarDisponibilidade"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/shape_botao_facebook"
			    android:text="@string/botao_verificar_disponibilidade"
			    android:padding="@dimen/margem_media" />

			<Button
			    android:id="@+id/btnAgendarAula"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="@dimen/margem_media"
			    android:background="@drawable/shape_botao_azul"
			    android:padding="15dp"
			    android:text="@string/botao_nome_agendar"
			    android:textColor="@color/branco" />

		</LinearLayout>

		
        
    </RelativeLayout>

</ScrollView>