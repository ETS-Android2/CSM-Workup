<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margem_media" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margem_media"
            android:background="@drawable/shape_bg_branco"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/label_objetivos_do_treinamento" />

            <RadioGroup
                android:id="@+id/rdgObjetivoTreinamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_media"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rdEmagrecimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/label_emagrecimento" />

                <RadioButton
                    android:id="@+id/rdHipertrofiaMuscular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hipertrofia_muscular" />

                <RadioButton
                    android:id="@+id/rdAumentoDaQualidadeDeVida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_aumento_da_qualidade_de_vida" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margem_media"
            android:background="@drawable/shape_bg_branco"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/label_pressao_maxima"
                android:layout_margin="@dimen/margem_media"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgAumentarPressaoSistolicaMaxima"
                        android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
                        android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
                        android:src="@drawable/coracao" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_pequena"
                        android:background="@drawable/shape_bg_branco"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/txtPressaoSistolicaMaxima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                                 android:gravity="center" />

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_pressao_sistolica" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgDiminuirPressaoSistolicaMaxima"
                        android:layout_width="@dimen/imagem_tamanho_extra_pequeno_menos"
                        android:layout_height="@dimen/imagem_tamanho_extra_pequeno_menos"
                        android:src="@drawable/coracao_menos"
                        android:layout_margin="@dimen/margem_media" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgAumentarPressaoDiastolicaMaxima"
                        android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
                        android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
                        android:src="@drawable/coracao" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_pequena"
                        android:background="@drawable/shape_bg_branco"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/txtPressaoDiastolicaMaxima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                                 android:gravity="center" />

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.64"
                            android:text="@string/label_pressao_diastolica"
                            android:textAlignment="center"
                            android:textSize="@dimen/titulos_extra_pequenos" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgDiminuirPressaoDiastolicaMaxima"
                        android:layout_width="@dimen/imagem_tamanho_extra_pequeno_menos"
                        android:layout_height="@dimen/imagem_tamanho_extra_pequeno_menos"
                        android:src="@drawable/coracao_menos"
                       	android:layout_margin="@dimen/margem_media" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margem_media"
                android:background="@drawable/shape_bg_branco"
                android:orientation="vertical"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margem_media"
                    android:text="@string/label_pressao_de_repouso" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                         android:gravity="center" >

                        <ImageView
                            android:id="@+id/imgAumentarPressaoSistolicaRepouso"
                            android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
                            android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
                            android:src="@drawable/coracao_mais_azul" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/margem_pequena"
                            android:background="@drawable/shape_bg_branco" >

                            <EditText
                                android:id="@+id/txtPressaoSistolicaDeRepouso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                 android:gravity="center" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_pressao_sistolica" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgDiminurPressaoSistolicaDeRepouso"
                            android:layout_width="@dimen/imagem_tamanho_extra_pequeno_menos"
                            android:layout_height="@dimen/imagem_tamanho_extra_pequeno_menos"
                            android:src="@drawable/coracao_azul_menos" 
                             android:layout_margin="@dimen/margem_media"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/imgAumentarPressaoDiastolicaDeRepouso"
                            android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
                            android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
                            android:src="@drawable/coracao_mais_azul" />

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_margin="@dimen/margem_pequena"
                             android:background="@drawable/shape_bg_branco"
                             android:gravity="center"
                             android:orientation="vertical" >

                             <EditText
                                 android:id="@+id/txtPressaoDiastolicaDeRepouso"
                                 android:layout_width="match_parent"
                                 android:text="0"
                                 android:gravity="center"
                                 android:layout_height="wrap_content" >

                             </EditText>

                             <TextView
                                 android:id="@+id/TextView03"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="0.64"
                                 android:text="@string/label_pressao_diastolica"
                                 android:textAlignment="center"
                                 android:textSize="@dimen/titulos_extra_pequenos" />
                         </LinearLayout>

                        <ImageView
                            android:id="@+id/imgDiminuirPressaoDiastolicaDeRepouso"
                            android:layout_width="@dimen/imagem_tamanho_extra_pequeno_menos"
                            android:layout_height="@dimen/imagem_tamanho_extra_pequeno_menos"
                            android:src="@drawable/coracao_azul_menos"
                             android:layout_margin="@dimen/margem_media" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>