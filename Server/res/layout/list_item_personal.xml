<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/margem_media"
    android:background="@drawable/shape_listview_branco" >

    <TextView
        android:id="@+id/txtNomePerfilPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgFotoPerfilPersonal"
        android:text="txt"
        android:textStyle="bold"
        android:textColor="@color/VerdePetroleoEscuro"
        android:textSize="@dimen/titulos_pequenos" />

    <TextView
        android:id="@+id/txtUsuarioPerfilPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomePerfilPersonal"
        android:layout_below="@+id/txtNomePerfilPersonal"
        android:text="txt"
        android:textColor="@color/cinzaTitulos"
        android:textSize="@dimen/titulos_extra_pequenos" />

    <ImageView
        android:id="@+id/imgFotoPerfilPersonal"
        android:layout_width="@dimen/imagem_tamanho_extra_pequeno"
        android:layout_height="@dimen/imagem_tamanho_extra_pequeno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
       	android:layout_margin="@dimen/margem_pequena"
        android:contentDescription="@string/label_selecionar_foto" />

</RelativeLayout>