<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_bg"  >
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:gravity= "center">

    <TextView
        android:id="@+id/lblOla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_ola"
        android:textSize="@dimen/titulos_extra_grandes"
        android:textColor="@color/VerdePetroleo"/>
    
    <TextView
        android:id="@+id/lblVamosTreinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_vamos_treinar"
        android:textColor="@color/cinzaTitulos"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spnSelecionarTreinamentoRealizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="@dimen/margem_grande"/>

    <TextView
        android:id="@+id/lblSelecionarTreinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_media"
        android:text="@string/label_selecionar_Treinamento"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/cinzaTitulos" />

    <Button
        android:id="@+id/btnIniciarTreinamentoAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_botao_azul"
        android:layout_margin="@dimen/margem_media"
        android:text="@string/botao_iniciar_treinamento"
        android:textColor="@color/branco" />
    
    <TextView
            android:id="@+id/lblAvisoSemTreinamentosLinkConfirmarInicioTreinamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_warning_cadastrar_novo_treinamento"
            android:textColor="@color/vermelho"
            android:gravity="center" />

</LinearLayout>

</ScrollView>